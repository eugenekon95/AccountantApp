<div class="max-w-7xl mx-auto py-8">
  <h1 class="text-3xl font-semibold text-gray-800 mb-6">Employees</h1>

  <div class="mb-4">
    <%= link_to 'Create Employee', new_employee_path, class: "inline-block py-2 px-4 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @employees&.each do |employee| %>
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
        <h2 class="text-xl font-semibold text-gray-700 mb-3"><%= employee.name %> <%= employee.last_name %></h2>
        <p class="text-gray-600 mb-2"><strong>Position:</strong> <%= employee.position %></p>
        <p class="text-gray-600 mb-2"><strong>Account Number:</strong> <%= employee.account_number %></p>
        <div class="flex justify-between items-center">
          <%= link_to 'Edit', edit_employee_path(employee), class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to 'Delete', employee_path(employee), data: { turbo_method: :delete }, class: "text-red-600 hover:text-red-800" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

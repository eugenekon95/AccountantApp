<div class="max-w-7xl mx-auto py-8">
  <h1 class="text-3xl font-semibold text-gray-800 mb-6">Departments</h1>

  <div class="mb-4">
    <%= link_to 'Create Department', new_department_path, class: "inline-block py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @departments.each do |department| %>
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
        <%= link_to department.name, department_path(department), class: "hover:underline text-gray-600 font-semibold" %>
        <div class="flex justify-between items-center">
          <%= link_to 'Edit', edit_department_path(department), class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to 'Delete', department_path(department), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-800" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
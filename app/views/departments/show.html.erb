<h1><%= @department.name %></h1>


<table class="min-w-full table-auto border-collapse border border-gray-200">
  <thead>
  <tr>
    <th class="px-4 py-2 border border-gray-300">ID</th>
    <th class="px-4 py-2 border border-gray-300">Name</th>
    <th class="px-4 py-2 border border-gray-300">Position</th>
    <th class="px-4 py-2 border border-gray-300">Account Number</th>
    <th class="px-4 py-2 border border-gray-300">Add Salary Record</th>
  </tr>
  </thead>
  <% @department&.employees&.each do |employee| %>
    <tr>
      <td class="px-4 py-2 border border-gray-300">
        <%= employee.id %>

      </td>
      <td class="px-4 py-2 border border-gray-300"><%= employee.name %></td>
      <td class="px-4 py-2 border border-gray-300"><%= employee.position %></td>
      <td class="px-4 py-2 border border-gray-300"><%= employee.account_number %></td>
      <td class="px-4 py-2 border border-gray-300">Salary Record </td>
    </tr>

  <% end %>

</table>
<br>
<%= link_to 'Add Employees', new_department_employee_path(department_id: @department.id), class: "mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"%>

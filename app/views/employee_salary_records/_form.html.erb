<div class="space-y-4">
  <%= form_with model: [employee, salary_record], local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :salary, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :salary, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :paid_on, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :paid_on, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>


    <div class="flex justify-end">
      <%= form.submit "Save Salary Record", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

<%= link_to 'Back', employee_employee_salary_records_path(@employee), class: 'mt-4 inline-block text-blue-500 hover:underline' %>